<h1>Burgers!</h1>



<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{>burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>



<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bg">Burger Name:</label>
    <input type="text" id="bg" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
  </div>

  <button type="submit">Add Burger</button>
</form>
